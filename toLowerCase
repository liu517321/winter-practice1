class Solution {
    public String toLowerCase(String str) {
        char[] sc = new char[str.length()];
        char t;
        for(int i = 0;i < str.length();i++) {
            t = str.charAt(i);
            if(t >= 65 && t <= 90) {
                t = (char)(t + 32);
            }
            sc[i] = t;
        }
        String sn = new String(sc);
        return sn;
    }
}
